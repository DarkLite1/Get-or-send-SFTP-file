{
  "MaxConcurrentJobs": 5,
  "Tasks": [
    {
      "TaskName": "Application x",
      "Sftp": {
        "ComputerName": "ftp.application-x.be",
        "Credential": {
          "UserName": "APP_X_SFTP_USERNAME",
          "Password": "APP_X_SFTP_PASSWORD"
        }
      },
      "Actions": [
        {
          "Type": "Upload",
          "Parameter": {
            "SftpPath": "/reports/",
            "ComputerName": "localhost",
            "Path": ["C:\\File1.xlsx", "C:\\File2.xlsx", "C:\\Folder"],
            "Option": {
              "OverwriteFileOnSftpServer": false,
              "RemoveFileAfterUpload": false,
              "ErrorWhen": {
                "UploadPathIsNotFound": false
              }
            },
            "?": "Type: Upload | Download"
          }
        },
        {
          "Type": "Download",
          "Parameter": {
            "SftpPath": "/data/",
            "ComputerName": "localhost",
            "Path": "C:\\Folder",
            "Option": {
              "OverwriteExistingFile": false,
              "RemoveFileAfterDownload": true,
              "ErrorWhen": {
                "DownloadPathIsNotFound": true
              }
            },
            "?": "Type: Upload | Download"
          }
        }
      ],
      "SendMail": {
        "To": ["bob@contoso.com"],
        "When": "Always",
        "?": "When: Never | OnlyOnError | OnlyOnErrorOrAction | Always"
      },
      "ExportExcelFile": {
        "When": "OnlyOnErrorOrAction",
        "?": "When: Never | OnlyOnError | OnlyOnErrorOrAction"
      }
    }
  ]
}
