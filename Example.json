{
  "MaxConcurrentJobs": 5,
  "Tasks": [
    {
      "TaskName": "Application x",
      "Sftp": {
        "ComputerName": "ftp.application-x.be",
        "Credential": {
          "UserName": "APP_X_SFTP_USERNAME",
          "Password": "APP_X_SFTP_PASSWORD",
          "PasswordKeyFile": null
        }
      },
      "Option": {
        "OverwriteFile": false,
        "RemoveFailedPartialFiles": false,
        "FileExtensions": [],
        "PartialFileExtension": ".UploadInProgress"
      },
      "Actions": [
        {
          "Type": "Upload",
          "Parameter": {
            "SftpPath": "/reports/",
            "ComputerName": null,
            "Path": "\\SERVER\\C$\\Folder"
          }
        },
        {
          "Type": "Download",
          "Parameter": {
            "SftpPath": "/data/",
            "ComputerName": "PC1",
            "Path": "C:\\Folder"
          }
        }
      ]
    }
  ],
  "SendMail": {
    "To": ["bob@contoso.com"],
    "When": "Always"
  },
  "ExportExcelFile": {
    "When": "OnlyOnErrorOrAction"
  },
  "?": {
    "Option.FileExtensions": "Empty will move all files",
    "Actions.Type": "Upload | Download, FileExtensions: empty is all files",
    "ExportExcelFile.When": "Never | OnlyOnError | OnlyOnErrorOrAction",
    "SendMail.When": "Never | OnlyOnError | OnlyOnErrorOrAction | Always"
  }
}
