{
  "MaxConcurrentJobs": 5,
  "Tasks": [
    {
      "Task": {
        "Name": "Upload app x",
        "ExecuteOnComputerName": "localhost"
      },
      "Sftp": {
        "ComputerName": "ftp.appx.be",
        "Path": "/reports/",
        "Credential": {
          "UserName": "APP_X_SFTP_USERNAME",
          "Password": "APP_X_SFTP_PASSWORD"
        }
      },
      "Upload": {
        "Path": ["C:\\File1.xlsx", "C:\\File2.xlsx", "C:\\Folder"],
        "Option": {
          "OverwriteFileOnSftpServer": false,
          "RemoveFileAfterUpload": false,
          "ErrorWhen": {
            "UploadPathIsNotFound": false
          }
        }
      },
      "SendMail": {
        "To": ["bob@contoso.com"],
        "When": "Always",
        "?": "When: Never | OnlyOnError | OnlyOnErrorOrUpload | Always"
      },
      "ExportExcelFile": {
        "When": "Always",
        "?": "When: Never | OnlyOnError | OnlyOnErrorOrUpload"
      }
    }
  ]
}
